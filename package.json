{
  "name": "ghsvs_sass_compile_and_prefix",
  "description": "Kompilieren und autoprefixen von scss in Template bs4ghsvs.",
  "version": "2019.12.26",
  "PathScss": "/mnt/z/_jobs/ghsvs-de-relaunch-bs3/templates/bs4ghsvs/scss",
  "PathCss": "/mnt/z/_jobs/ghsvs-de-relaunch-bs3/templates/bs4ghsvs/css",
  "FolderWork": "ghs",
  "FolderPrefixed": "vendor-prefixed",
  "keywords": [
    "css",
    "sass",
    "autoprefixer",
    "web"
  ],
  "homepage": "https://www.ghsvs.de/",
  "author": "G@HService Berlin Neukölln, Volkmar Volli Schlothauer (ghsvs.de)",
  "contributors": [
    "G@HService Berlin Neukölln, Volkmar Volli Schlothauer (ghsvs.de)"
  ],
  "scripts": {
    "ghs-bin-test": "./bin/test.sh",
    "ghs-npm-update-check": "ncu",
    "ghs-ncu-override-package-json": "ncu -u",
    "ghs-watch": "nodemon --watch $npm_package_PathScss/ --ext scss --exec \"npm run ghs-all\"",
    "ghs-all": "npm-run-all ghs-rm ghs-mkdir ghs-mkdir-produktiv ghs-compile ghs-prefix ghs-minify ghs-copy",
    "ghs-rm": "cross-env-shell \"shx rm -rf $npm_package_FolderWork\"",
    "ghs-mkdir": "cross-env-shell \"shx mkdir -p $npm_package_FolderWork/$npm_package_FolderPrefixed\"",
    "ghs-mkdir-produktiv": "cross-env-shell \"shx mkdir -p $npm_package_PathCss/$npm_package_FolderPrefixed\"",
    "ghs-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 $npm_package_PathScss/ -o $npm_package_FolderWork/",
    "ghs-prefix": "postcss \"$npm_package_FolderWork/*.css\" --config build/postcss.config.js --dir $npm_package_FolderWork/$npm_package_FolderPrefixed/",
    "ghs-minify": "npm-run-all --parallel ghs-minify-*",
    "ghs-minify-prefixed-template": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output $npm_package_FolderWork/$npm_package_FolderPrefixed/template-vendor-prefixed.css $npm_package_FolderWork/$npm_package_FolderPrefixed/template.css",
    "ghs-minify-prefixed-print": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output $npm_package_FolderWork/$npm_package_FolderPrefixed/print-vendor-prefixed.css $npm_package_FolderWork/$npm_package_FolderPrefixed/print.css",
    "ghs-minify-template": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output $npm_package_FolderWork/template.min.css $npm_package_FolderWork/template.css",
    "ghs-minify-print": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output $npm_package_FolderWork/print.min.css $npm_package_FolderWork/print.css",
    "ghs-copy": "npm-run-all ghs-copy-*",
    "ghs-copy-prefixed": "cross-env-shell shx cp $npm_package_FolderWork/$npm_package_FolderPrefixed/*-vendor-prefixed.css* $npm_package_FolderWork/",
    "ghs-copy-toProduktiv": "cross-env-shell shx cp -r $npm_package_FolderWork/* $npm_package_PathCss/"
  },
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^6.0.3",
    "find-unused-sass-variables": "^1.0.4",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "shx": "^0.3.2"
  },
  "engines": {
    "node": ">=10"
  }
}
